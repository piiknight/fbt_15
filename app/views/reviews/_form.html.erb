<%= form_for [@tour, @review] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= hidden_field_tag :history, @history if @history.present? %>
  <div class="form-group row">
    <%= f.label :rating, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-6" id="star-rating">
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :content, class: "col-sm-2 form-control-label" %>
    <div class="col-sm-6"><%= f.text_area :content %></div>
  </div>
  <div class="row">
    <%= f.submit class: "btn btn-success col-md-2 col-md-offset-4" %>
  </div>
<% end %>
