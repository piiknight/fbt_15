<div class="container">
  <% @reviews.each do |review| %>
    <div class="row review-history">
      <div class="col-md-4">
        <p><%= t("review.link_tour", link_tour_name: link_to(review.name, tour_path(review.tour))).html_safe %></p>
        <p><%= review.created_at %></p>
      </div>
      <div class="col-md-4 ">
        <div class="row">
          <%= image_tag review.image, class: "img-thumbnail" %>
        </div>
        <div class="row">
          <div class="star-rating" data-score= <%= review.rating %> ></div>
          <%= review.content %>
        </div>
      </div>
      <div class="col-md-4">
        <p><%= link_to t("review.edit"), edit_tour_review_path(review.tour, review,
          history: Settings.url.param.history), class: "btn btn-success" %>
          <%= link_to t("review.delete"), tour_review_path(review.tour, review,
          history: Settings.url.param.history), method: :delete, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
