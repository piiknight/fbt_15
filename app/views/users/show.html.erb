<% provide :title, @user.name %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h1 class="panel-title"><%= @user.name %></h1>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3" align="center">
              <%= image_tag(avatar_default(@user.avatar.url), class: "avatar_default-size") %>
            </div>
            <div class=" col-md-9 col-lg-9 ">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><%= t("profile.address") %></td>
                    <td><%= @user.address %></td>
                  </tr>
                  <tr>
                    <td><%= t("profile.phone") %></td>
                    <td><%= @user.sdt %></td>
                  </tr>
                  <tr>
                    <td><%= t("profile.email") %></td>
                    <td><%= @user.email %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="link-to-page">
            <% if current_user? @user %>
              <%= link_to t("user.history"), "#", class: "my-link-to" %>
            <% end %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
