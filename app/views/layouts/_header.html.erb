      <div class="container">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <div class="w3menu navbar-right">
            <ul class="nav navbar">
              <li><%= link_to t("static_pages.home.title"), home_path %></li>
              <li><%= link_to t("static_pages.about.title"), about_path %></li>
              <li><%= link_to t("static_pages.tours.title"), tours_path %></li>
